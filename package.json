{
  "name": "factorio-locale-format-helper",
  "displayName": "Factorio Locale Format Helper",
  "description": "A tool to update translation keys from source file.",
  "version": "0.4.0-a",
  "publisher": "tanvec",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "factorio",
    "localization",
    "locale",
    "cfg",
    "l10n",
    "i18n"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#2B2D42",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:**/*.cfg"
  ],
  "contributes": {
    "commands": [
      {
        "command": "factorio-locale-format-helper.updateKeysFromSource",
        "title": "Update Localization Keys",
        "category": "FLFH"
      }
    ],
    "configuration": [
      {
        "title": "FLFH Settings",
        "properties": {
          "factorio-locale-format-helper.discardCommentsInTarget": {
            "type": "boolean",
            "default": false,
            "description": "Discard existing comments in target file."
          }
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cyx2015s/vsc-ext-flfh"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "vsce": "^2.15.0"
  },
  "badges": [
    {
      "url": "https://img.shields.io/badge/VS%20Code-v1.98+-blue.svg",
      "href": "https://code.visualstudio.com",
      "description": "Visual Studio Code Version"
    }
  ]
}
